<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="4dp"
    android:layout_width="160dp"
    android:layout_height="230dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp">
                <ImageView
                    android:id="@+id/itemproduct_image"
                    android:src="@drawable/baseline_perm_media_24"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>

                <TextView
                    android:id="@+id/itemproduct_name"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Colored Cotton Low Cut Socks - Embryo"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/itemproduct_price"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="price: 180000 VND"
                    android:textSize="15sp" />

            </LinearLayout>
            <ImageView

                android:src="@drawable/iconnew_h512"
                android:layout_gravity="top|right"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </FrameLayout>
</androidx.cardview.widget.CardView>